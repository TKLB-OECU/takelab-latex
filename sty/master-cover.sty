\makeatletter

\def\professer#1{\def\@professer{#1}}
\def\id#1{\def\@id{#1}}

\def\maketitle{
  \begin{titlepage}
    
    \centerline{\Huge
      修\hspace{1.6em}士\hspace{1.6em}論\hspace{1.6em}文 % <- 修士論文用
    }
    \vskip 7zh
    
    \vbox{{\leavevmode \hbox to \textwidth{\large\bf 論\hspace{1em}文\hspace{1em}名}}}
    \vskip 2zh
    \underline{\parbox{\textwidth}{\centering\Large\@title}}
    
    \vskip9zh
    \rightline{
      \large{
        \begin{tabular}{rll}
          指導教員名 & \underline{\makebox[12zw]{\@professer}} \\
          &\\
          &\\
          提出年月日 & \@date \\
          &\\
          提出者 & 工学研究科 情報工学コース\\
          &\\
          & 学生番号 \@id \\
          &\\
          & 氏名 \underline{\makebox[9zw]{\@author}} \\ 
        \end{tabular}
      }
    }
    \vskip 8zh
    
    \centerline{
      \huge
      大\hspace{0.4em}
      阪\hspace{0.4em}
      電\hspace{0.4em}
      気\hspace{0.4em}
      通\hspace{0.4em}
      信\hspace{0.4em}
      大\hspace{0.4em}
      学
    }
    
  \end{titlepage}
  
  \setcounter{footnote}{0}
  \let\thanks\relax\gdef\@thanks{}\gdef\@author{}\gdef\@title{}
  \let\maketitle\relax}

\endinput
