%    直接書き込む必要はない．
%    
% # 卒業論文・修士論文との切り替え
%    styleファイルの指定を main.tex からコメントアウト部分で制御する



\typeout{master-cover.sty 2024-02-21: Released v1.96 - edited by Wakana Hashimoto}

\makeatletter

\def\professor#1{\def\@professor{#1}}
\def\id#1{\def\@id{#1}}

\def\maketitle{
  \begin{titlepage}

    % 修士論文用
    \centerline{\Large
      修\hspace{0.2em}
      士\hspace{0.2em}
      学\hspace{0.2em}
      位\hspace{0.2em}
      論\hspace{0.2em}
      文
    }
    
    \vskip 11zh

    \centering{\LARGE
      \@title
    }
    
    \vskip 11zh

    %% 指導教員
    \centerline{\large 指導教員}
    \vskip 1zh
    \centerline{\large \@professor}

    \vskip 4zh
    
    %% 提出者
    \centerline{\large 提出者}
    \vskip 1zh
    \centerline{\large \@id \@author}
    
    \vskip 4zh
    
    \centerline{\large \@date}
    
    \vskip 4zh
    
    \centerline{\large 大阪電気通信大学大学院 工学研究科 工学専攻 情報工学コース}

  \end{titlepage}
  
  \setcounter{footnote}{0}
  \let\thanks\relax\gdef\@thanks{}\gdef\@author{}\gdef\@title{}
  \let\maketitle\relax
}

\endinput
